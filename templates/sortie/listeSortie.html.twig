{% extends'base.html.twig' %}

{% block title %}
    Liste sortie
{% endblock %}

 {% block stylesheets %}
     {{ encore_entry_link_tags ( 'app' ) }}
     {{ encore_entry_link_tags ( 'listeSortie' ) }}
 {% endblock %}

{% block main %}

    <div class="block">
    <form method="get">
    <div class="title">Filtrer les sorties</div>
        {{ form_start(filtreForm) }}
        {{ form_widget(filtreForm) }}
        <button type="submit"> modifier</button>
        {{ form_end(filtreForm) }}
    <table class="tableau">
        <tr>
            <td>
                Nom de la sortie
            </td>
            <td>
                Date de la sortie
            </td>
            <td>
                Cl√¥ture
            </td>
            <td>
                Inscrits/Places
            </td>
            <td>
                Etat
            </td>
            <td>
                Inscrit
            </td>
            <td>
                Organisateur
            </td>
            <td>
                Actions
            </td>
        </tr>
        <tr>

            {% for sortie in sorties %}

                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut|date("d/m/Y") }}</td>
                <td>{{ sortie.dateHeureDebut|date_modify("+"~sortie.duree~" day")|date("d/m/Y" ) }}</td>
                <td>{{ sortie.sortieInscrits|length }}/{{ sortie.nbInscriptionsMax }}</td>
                <td>{{ sortie.etat.libelle }}</td>
                <td> faire la X</td>
                <td>{{ sortie.site.nom }}</td>
                <td>Actions</td>

            {% endfor %}
        </tr>
    </table>
{% endblock %}